[run]
# Coverage.py configuration

# Source code to measure
source = src/plato

# Branch coverage (measure if/else branches)
branch = True

# Omit these files from coverage
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */site-packages/*
    */venv/*
    */examples/*
    */cli.py
    */sandbox_sdk.py
    */utils/proxytunnel.py
    */models/build_models.py
    */models/sandbox.py
    */flow_executor.py
    */sync_flow_executor.py

# Concurrency mode for async code
concurrency = thread,greenlet

[report]
# Reporting options

# Precision for coverage percentage
precision = 2

# Show missing lines
show_missing = True

# Skip covered files
skip_covered = False

# Skip empty files
skip_empty = True

# Ignore errors for source not found
ignore_errors = False

# Fail if coverage is below this threshold
fail_under = 80

# Exclude lines from coverage
exclude_lines =
    # Standard exclusions
    pragma: no cover
    def __repr__
    def __str__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod
    # Defensive programming
    except ImportError
    pass

[html]
# HTML report options
directory = htmlcov
title = Plato SDK Coverage Report

[xml]
# XML report options (for CI/CD)
output = coverage.xml
